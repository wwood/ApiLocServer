<h1>Add a comment to <%= @coding_region.string_id %></h1>
<% form_for :user_comment, :url => { :action => "commit_comment", :params => {:coding_region_id => @coding_region.id} } do |f| %>
  <%= f.error_messages %>
  <h4>Title</h4> <%= f.text_field :title %>
  <h4>Comment</h4> <%= f.text_area :comment %>
<%#= f.hidden_field 'coding_region_id', @coding_region.string_id %>
<br />
<%= f.submit "Submit Comment" %>
<% end %>
